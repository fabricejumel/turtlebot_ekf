import rospy
import sensor

def callback(data):
	rospy.loginfo(rospy.get_caller_id() + "I think my state is %s", data.data)
	print data.actual.positions

def turtlebot_motion_model():

	#Initiate motion model node for the Bayes Filter.
	rospy.init_node('motion_model', anonymous=True)

	#Define subscriber to get the turtlebot's state belief (bel_state)
	rospy.Subscriber("mobile_base/joint_states", JointState, callback)

	rospy.spin()


#Main section of code that will continuously run unless rospy receives interuption (ie CTRL+C)
if __name__ == '__main__':
	try: turtlebot_motion_model()
	except rospy.ROSInterruptException: pass
